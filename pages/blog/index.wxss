/* pages/blog/index.wxss */
.blog-index {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}
.fixed-content {
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #fff;
  z-index: 99;
}
.search-header {
  height: 30px;
  width: 100%;
  flex: 0 0 auto;
  display: flex;
  padding: 0 20px;
  box-sizing: border-box;
  position: relative;
}
.search-icon {
  width: 50px;
  text-align: center;
  flex: 0 0 auto;
  position: absolute;
  left: 20px;
  top: 50%;
  transform: translate(0, -50%);
}
.search-input {
  width: 100%;
  height: 100%;
  display: flex;
  background: #f0f0f0;
  padding-left: 50px;
  font-size: 14px;
  color: #777;
  align-items: center;
}
.taber-wrapper {
  display: flex;
  height: 35px;
  line-height: 35px;
  margin-top: 5px;
  position: relative;
}
.taber-slider-wrapper {
  width: 100%;
  height: 2px;
  background: transparent;
  position: absolute;
  left: 0;
  bottom: 0;
}
.taber-slider {
  width: calc(100% / 3);
  height: 2px;
  position: relative;
}
.taber-slider:after {
  content: '';
  display: inline-block;
  width: 30px;
  height: 2px;
  background: #000;
  position: absolute;
  left: 50%;
  top: 0;
  transform: translate(-50%, 0);
}
.taber-item {
  flex: 1 1 auto;
  text-align: center;
}
.taber-title {
  text-align: center;
  font-size: 14px;
  color: #666;
  transition: all ease 0.5s;
}
.taber-active .taber-title {
  color: #333;
}


.body-content {
  padding-top: 75px;
  background: #f0f0f0;
  height: calc(100% - 45px);
  box-sizing: border-box;
}
.tab-content {
  height: 100%;
}
.tab-page-wrapper {
  width: 100%;
}
.tab-page {
  width: 100%;
  height: 100%;
  background: #fff;
}