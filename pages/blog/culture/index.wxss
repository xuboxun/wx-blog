/* pages/blog/culture/index.wxss */
.culture {
  width: 100%;
  height: 100%;
}
.scroll-content {
  position: relative;
  width: 100%;
  padding: 10px 20px;
  box-sizing: border-box;
}
.reach-bottom {
  width: 100%;
  height: 80px;
  text-align: center;
  color: #ccc;
  font-size: 12px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.reach-bottom::before,
.reach-bottom::after {
  content: '';
  display: inline-block;
  width: 50px;
  height: 1px;
  background: #eee;
  margin: 0 10px;
}