.tag-detail {
  padding: 0 20px;
  padding-bottom: 50px;
}
.title {
  height: 100px;
  line-height: 100px;
  font-size: 20px;
  font-weight: 400;
  color: #17233d;
}
.desc {
  text-indent: 2.2rem;
  line-height: 30px;
  font-size: 15px;
  color: #515a6e;
}
