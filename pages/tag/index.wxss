/* pages/tag/index.wxss */
.tag {
  display: flex;
  flex-direction: column;
  padding: 10px 20px 100px 20px;
}
.search-wrapper {
  box-sizing: border-box;
  margin-bottom: 15px;
  padding: 2px 5px 2px 10px;
  border: 1px solid #eee;
  border-radius: 3px;
  box-shadow: 1px 2px 4px #eee;
  display: flex;
}
.search-input {
  flex: 1 1 auto;
  height: 30px;
  font-size: 14px;
}
.search-button {
  flex: 0 0 auto;
  width: 30px;
  height: 30px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.tag-list-wrapper {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}
.tag-item {
  height: 28px;
  line-height: 28px;
  color: #666;
  font-size: 13px;
  margin-left: 5px;
  margin-right: 5px;
  margin-bottom: 15px;
  padding: 0 10px;
  background: #fafafa;
  border-radius: 3px;
  border: 1px solid #e8eaec;
}