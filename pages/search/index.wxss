/* pages/search/index.wxss */
.search {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}
.fixed-content {
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #fff;
  z-index: 99;
}
.search-header {
  height: 30px;
  width: 100%;
  flex: 0 0 auto;
  display: flex;
  padding: 0 20px;
  box-sizing: border-box;
  position: relative;
}

.search-icon {
  width: 50px;
  text-align: center;
  flex: 0 0 auto;
  position: absolute;
  left: 20px;
  top: 50%;
  transform: translate(0, -50%);
}
.search-input {
  height: 100%;
  flex: 1 1 auto;
  background: #f0f0f0;
  padding-left: 50px;
  font-size: 14px;
}

.body-content {
  padding-top: 35px;
  background: #fff;
  height: 100%;
  box-sizing: border-box;
}
.search-result {
  height: 100%;
}
.result-list {
  padding: 0 20px 50px 20px;
  box-sizing: border-box;
}